<!-- Section 1 - Dark-->
  <div class="container-fluid bg-dark text-light p-5">
    <div class="container bg-dark p-5">
      <h1 class="display-4">Hit me up!</h1>
      <h3>To collaborate, and more.</h3>
      <hr />
      <p>By Benjamin Lefebvre</p>
    </div>
  </div>

<!-- Section 2 - Light -->
<div class="container-fluid bg-light text-dark p-5">
    <div class="container bg-light p-5">
    <h2>Please fill the form</h2>
    <p>I will get back to you within 48 hours!</p>

    <form id="contact-form">
        <div class="form-group">
        <div class="row">
            <div class="col-md-6">
            <label for="fname">First Name*</label>
            <input type="text" class="form-control" id="fname" placeholder="First name" required="required">
            </div>
            <div class="col-md-6">
            <label for="lname">Last Name*</label>
            <input type="text" class="form-control" id="lname" placeholder="Last name" required="required">
            </div>
        </div>
        </div>

        <div class="form-group">
        <label for="email">Email address*</label>
        <input type="email" class="form-control" id="email" placeholder="name@example.com" required="required">
        </div>

        <div class="form-group">
        <label for="subject">Subject*</label>
        <input type="text" class="form-control" id="subject" placeholder="e.g. Job Offert" required="required">
        </div>

        <div class="form-group">
        <label for="message">Message*</label>
        <textarea class="form-control" id="message" rows="3" required="required"></textarea>
        </div>

        <input class="btn btn-lg btn-light" type="submit" id="submit" value="Send">
        <input class="btn btn-lg btn-light" type="reset" id="reset" value="Clear">

    </form>
    </div>
</div>
</div>
