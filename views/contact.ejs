<%- include('partials/header'); -%> <%- include('partials/main_nav'); -%>

<main>
  <div class="container text-light">
    <div class="row">
      <div class="offset-md-1 col-md-10">
        <h1><%= title %></h1>
        <br />
        <table class="table table-bordered table-striped table-hover">
          <!-- Header Row -->
          <tr class="d-flex">
            <th class="text-center text-light col-3">Name</th>
            <th class="text-center text-light col-3">Phone</th>
            <th class="text-center text-light col-6">Email</th>
          </tr>

          <!-- Template row of data -->
          <% for(let i = 0; i < ContactList.length; i++) { %>
          <tr class="d-flex">
            <td class="text-center text-light col-3"><%= ContactList[i].name %></td>
            <td class="text-center text-light col-3"><%= ContactList[i].phone %></td>
            <td class="text-center text-light col-6"><%= ContactList[i].email %></td>
          </tr>
          <% } %>
        </table>
      </div>
    </div>
  </div>
</main>

<%- include('partials/bottom_nav'); -%> <%-include('partials/footer'); -%>
