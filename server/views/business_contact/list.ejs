<%- include('../partials/header'); -%> <%- include('../partials/main_nav'); -%>

<main>
  <div class="container text-light">
    <div class="row">
      <h1><%= title %></h1>
      <a href="/business_contact/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Contact
      </a>
      <table class="table table-bordered table-striped table-hover">
        <!-- Header Row -->
        <tr class="d-flex">
          <th class="text-center text-light col-2">Name</th>
          <th class="text-center text-light col-3">Phone</th>
          <th class="text-center text-light col-5">Email</th>
          <th class="text-center text-light col-1"></th>
          <th class="text-center text-light col-1"></th>
        </tr>

        <!-- Template row of data -->
        <% for(let i = 0; i < ContactList.length; i++) { %>
        <tr class="d-flex">
          <td class="text-center text-light col-2">
            <%= ContactList[i].name %>
          </td>
          <td class="text-center text-light col-3">
            <%= ContactList[i].phone %>
          </td>
          <td class="text-center text-light col-5">
            <%= ContactList[i].email %>
          </td>
          <td class="text-center text-light col-1">
            <a
              href="/business_contact/edit/<%= ContactList[i]._id %>"
              class="btn btn-primary btn-sm"
              role="button"
            >
              <i class="fas fa-pencil-alt"></i><br />Edit
            </a>
          </td>
          <td class="text-center text-light col-1">
            <a
              href="/business_contact/delete/<%= ContactList[i]._id %>"
              class="btn btn-danger btn-sm"
              role="button"
            >
              <i class="fas fa-trash-alt"></i><br />Delete
            </a>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</main>

<%- include('../partials/bottom_nav'); -%> <%-include('../partials/footer'); -%>
